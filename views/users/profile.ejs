            isValid = false;
        }
    
        // Validate Mobile
        var mobile = document.querySelector('[name="mobile"]').value.trim();
        if(mobile === "" || isNaN(mobile) || mobile.length !== 10) {
            document.getElementById('mobileError').textContent = "Please enter a valid 10-digit mobile number!";
            isValid = false;
        }
    
        // Validate Region
        var region = document.querySelector('[name="region"]').value.trim();
        if(region === "") {
            document.getElementById('regionError').textContent = "Region cannot be empty or just spaces!";
            isValid = false;
        }
    
        // Validate PinCode
        var pinCode = document.querySelector('[name="pinCode"]').value.trim();
        if(pinCode === "" || isNaN(pinCode)) {
            document.getElementById('pinCodeError').textContent = "Please enter a valid PinCode!";
            isValid = false;
        }
    
        // Validate AddressLine
        var addressLine = document.querySelector('[name="addressLine"]').value.trim();
        if(addressLine === "") {
            document.getElementById('addressLineError').textContent = "Address cannot be empty or just spaces!";
            isValid = false;
        }
    
        // Validate AreaStreet
        var areaStreet = document.querySelector('[name="areaStreet"]').value.trim();
        if(areaStreet === "") {
            document.getElementById('areaStreetError').textContent = "Area/Street cannot be empty or just spaces!";
            isValid = false;
        }
    
        // Validate Landmark
        var ladmark = document.querySelector('[name="ladmark"]').value.trim();
        if(ladmark === "") {
            document.getElementById('ladmarkError').textContent = "Landmark cannot be empty or just spaces!";
            isValid = false;
        }
    
        // Validate Town/City
        var townCity = document.querySelector('[name="townCity"]').value.trim();
        if(townCity === "") {
            document.getElementById('townCityError').textContent = "Town/City cannot be empty or just spaces!";
            isValid = false;
        }
    
        return isValid;
    }
